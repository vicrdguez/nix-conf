# :command.master_script

# :command.version_command
version_command() {
  echo "$version"
}

# :command.usage
ntpl_usage() {
  printf "ntpl - Shortcuts for my Nix flake templates\n\n"

  printf "%s\n" "Usage:"
  printf "  ntpl COMMAND\n"
  printf "  ntpl [COMMAND] --help | -h\n"
  printf "  ntpl --version | -v\n"
  echo
  # :command.usage_commands
  printf "%s\n" "Commands:"
  printf "  %s   Show templates\n" "show"
  printf "  %s   Init a template\n" "init"
  echo

  # :command.long_usage
  if [[ -n "$long_usage" ]]; then
    printf "%s\n" "Options:"

    # :command.usage_fixed_flags
    printf "  %s\n" "--help, -h"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "--version, -v"
    printf "    Show version number\n"
    echo

  fi
}

# :command.usage
ntpl_show_usage() {
  printf "ntpl show - Show templates\n\n"
  printf "Alias: s\n"
  echo

  printf "%s\n" "Usage:"
  printf "  ntpl show [OPTIONS]\n"
  printf "  ntpl show --help | -h\n"
